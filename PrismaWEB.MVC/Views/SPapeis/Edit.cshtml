@model ProjetoModeloDDD.MVC.ViewModels.SPapelViewModel

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-row col-12">
        <div class="form-group col-12">
            <div class="col-md-offset-2">
                <input type="submit" value="Salvar" class="ui violet button" />
                <input id="SaveAndNew" type="submit" value="Salvar/Novo" class="ui blue button" />
                <a href="@Url.Action("Index")" class="ui grey button">Cancelar</a>
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
            <a style="color:red">*</a>
            <div class="ui-widget">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label" })
            <a style="color:red">*</a>
            <div class="ui-widget">
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group col-12">
        <div class="col-md-offset-2">
            <input type="submit" value="Salvar" class="ui violet button" />
        </div>
    </div>
}

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Páginas</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <button class="ui violet button" onclick="AbrirMenuNovo()">Nova pagina</button>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Pagina")
                </th>
                <th>
                    @Html.DisplayName("Action")
                </th>
            </tr>
            <tr>
                <td>
                    @*@Html.DropDownList("Papeis");*@
                    <select class="dropdown ui"></select>
                </td>
                <td>
                    <select class="ui dropdown"></select>
                    @*@Html.DropDownList("Acoes");*@
                </td>
            </tr>
            @if (Model.Acoes != null)
            {
                foreach (var item in Model.Acoes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pagina.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>

<script>
    function AbrirMenuNovo() {
        alert("Kabummmmm");
    }
</script>