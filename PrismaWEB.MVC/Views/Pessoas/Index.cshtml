@model IEnumerable<ProjetoModeloDDD.MVC.ViewModels.PessoaViewModel>

@using ProjetoModeloDDD.MVC.Html_Helpers

@{
    ViewBag.Title = "Index";
}

@{
    Html.RenderAction("BotaoCreate", "Botoes", new { NomeController = "Pessoas"});
}
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" cellspacing="0">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataNascimento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cpf)
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width:90px">
                            @Html.Editar(item.Id, Url.Action("Edit", new { id = item.Id }))
                            @Html.Deletar(item.Id, item.Nome)
                            @if (item.Ativo == true)
                            {
                                <a href="@Url.Action("Desativar", new { id = item.Id })" data-toggle="tooltip" title="Desativar">
                                    <span style="margin-right:0px;" class="ban">
                                        <i class="fa fa-share-square" aria-hidden="true" style="color:white"></i>
                                    </span>
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Ativar", new { id = item.Id })" data-toggle="tooltip" title="Ativar">
                                    <span style="margin-right:0px;" class="green">
                                        <i class="fa fa-check-square" aria-hidden="true" style="color:white"></i>
                                    </span>
                                </a>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Details/"+item.Id)" class="removeLinkAzul">
                                @Html.DisplayFor(modelItem => item.Nome)
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("Details/"+item.Id)" class="removeLinkAzul">
                                @item.DataNascimento.ToString("dd/MM/yyyy")
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("Details/"+item.Id)" class="removeLinkAzul">
                                @Html.DisplayFor(modelItem => item.Cpf)

                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>