@using ProjetoModeloDDD.MVC.Html_Helpers
@using ProjetoModeloDDD.MVC.ViewModels.Sistema

<li class="nav-item dropdown" id="menu-usuario">
    <a id="open-menu-usuario" class="nav-link dropdown-toggle mr-lg-2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="blue">@Html.SiglaUsuario(Session["usuarioLogado"] as SCadastroUsuarioLogadoViewModel)</span>
    </a>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu2" style="width:250px">
        <div>
            <h2 class="dropdown" style="margin: 0px" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span style="margin-right:0px; margin-left:8px" class="blue">@Html.SiglaUsuario(Session["usuarioLogado"] as SCadastroUsuarioLogadoViewModel)</span>
                <label style="font-size:14px">@Html.NomeUsuario(Session["usuarioLogado"] as SCadastroUsuarioLogadoViewModel)</label>
            </h2>
        </div>
        <div class="dropdown-divider"></div>
        <a class="nav-link dropdown-item" style="color:black" href="~/Configuracoes">
            <i class="fa fa-fw fas fa-cog"></i>Configurações
        </a>
        <a class="nav-link dropdown-item" style="color:black">
            <i class="fa fa-fw fas fa-user"></i>Perfil
        </a>
        <a class="nav-link dropdown-item" style="color:black" href="~/SCadastros/AlterarSenha">
            <i class="fa fa-fw fas fa-key"></i>Alterar Senha
        </a>
        <div class="dropdown-divider"></div>
        <h6 class="dropdown-header">
            <i class="fa fa-fw fab fa-leanpub"></i>
            Papéis
        </h6>
        @Html.PapeisUsuarioLogado(Session["usuarioLogado"] as SCadastroUsuarioLogadoViewModel)
        <div class="dropdown-divider"></div>
        <a class="nav-link dropdown-item" data-toggle="modal" data-target="#exampleModal" style="color:black">
            <i class="fa fa-fw fa-sign-out"></i>Logout
        </a>
    </div>
</li>



<style CSS>
    .dropdown:hover > .dropdown-menu {
        display: block;
    }
</style>
